<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestFormsShared.AddNewScorePage"
             Title="Add New Score"
             >
  
  
    <StackLayout Orientation="Vertical" Spacing="25" Padding="50">
      <Entry x:Name="Score" Placeholder="Score" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
      <Button x:Name="SubmitBtn" Text="Submit" Margin="0, 15, 0, 0" Clicked="SubmitBtn_OnClicked"/>
    </StackLayout>
  
  
</ContentPage>